<h1>Carrito de Compras</h1>
<a href="/">Home</a>
<ul>
    {{#each cart.products}}
        <li>
            {{this.title}} - Cantidad: {{this.quantity}}

            <form action="/api/carts/{{../cart._id}}/{{this.productId}}" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit">Eliminar</button>
            </form>

            <form action="/api/carts/{{../cart._id}}/{{this.productId}}/quantity" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <label for="quantity">Cantidad:</label>
                <input type="number" name="quantity" value="{{this.quantity}}" min="1">
                <button type="submit">Actualizar Cantidad</button>
            </form>
        </li>
    {{/each}}
</ul>

<form action="/api/carts/{{cart._id}}" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit">Limpiar Carrito</button>
</form>

<br></br>

            <form action="/api/carts/{{cart._id}}/purchase" method="POST">
                <input type="hidden" name="_method" value="POST">
                <button type="submit">Comprar</button>
            </form>


<a href="/">Volver a la tienda</a>

